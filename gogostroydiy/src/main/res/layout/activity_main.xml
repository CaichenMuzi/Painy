<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_story"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg"
              android:orientation="horizontal"
              android:paddingBottom="24dp"
              android:paddingLeft="24dp"
              android:paddingRight="24dp"
              android:paddingTop="24dp"
              tools:context="com.gogostar.gogostroydiy.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.gogostar.gogostroydiy.CircleImageView
            android:id="@+id/iv_main_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tt_03"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/jifen"/>

                <TextView
                    android:id="@+id/tv_main_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星星币"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_main_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_main_more"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="right"
            android:src="@drawable/more_1"/>

        <!--<ImageView-->
        <!--addndroid:id="@+id/img_moerduo"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:src="@drawable/mo_0"/>-->
    </LinearLayout>
</LinearLayout>